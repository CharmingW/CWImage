<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/status_bar_height">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_xxxl_spacing"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_s_spacing"
                android:text="热门搜索"
                android:textSize="@dimen/common_image_item_text_m"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/hot_list"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:paddingStart="@dimen/common_s_spacing"
                android:clipToPadding="false"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_xs_spacing"
                android:layout_marginStart="@dimen/common_s_spacing"
                android:text="热门壁纸"
                android:textSize="@dimen/common_image_item_text_m"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/wallpaper_tag_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_xs_spacing"
                android:paddingStart="@dimen/common_s_spacing"
                android:clipToPadding="false"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_xs_spacing"
                android:layout_marginStart="@dimen/common_s_spacing"
                android:text="收藏标签"
                android:textSize="@dimen/common_image_item_text_m"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/tag_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_xs_spacing"
                android:paddingStart="@dimen/common_s_spacing"
                android:clipToPadding="false"/>

        </LinearLayout>

        <com.arlib.floatingsearchview.FloatingSearchView
            android:id="@+id/floating_search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:floatingSearch_backgroundColor="@android:color/white"
            app:floatingSearch_close_search_on_keyboard_dismiss="true"
            app:floatingSearch_dismissOnOutsideTouch="true"
            app:floatingSearch_leftActionMode="showHamburger"
            app:floatingSearch_menu="@menu/menu_search"
            app:floatingSearch_searchBarMarginLeft="@dimen/common_xs_spacing"
            app:floatingSearch_searchBarMarginRight="@dimen/common_xs_spacing"
            app:floatingSearch_searchBarMarginTop="@dimen/common_xs_spacing"
            app:floatingSearch_searchHint="搜索..."
            app:floatingSearch_showSearchKey="false"
            app:floatingSearch_suggestionsListAnimDuration="200">

        </com.arlib.floatingsearchview.FloatingSearchView>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>
